---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import deskImage from "../assets/desk.jpeg";
---

<Layout title="Welcome to Astro.">
  <main class="container">
    <div class="headline">
      <Image src={deskImage} alt="My desk setup" />
      <h1>Uses</h1>
    </div>
    <!-- very basic markup to test normalize 	 -->
    <p>Here are some of the tools and services I use to build websites.</p>
    <ul>
      <li>VSCode</li>
      <li>GitHub</li>
      <li>Netlify</li>
    </ul>
    <a href="/">Go home</a>
  </main>
</Layout>

<style is:global>
  :root {
    --primary: #d0ad54;
    --primary-text: #5b4a39;
    --secondary: #dbab3d;
    --text-1: hsl(25, 70%, 9%);
    --text-2: hsl(25, 70%, 59%);
    --accent: hsl(183, 100%, 75%);
    --accent-text: hsl(183, 100%, 15%);
    --stroke: hsl(25, 70%, 9%);
    --surface: hsl(41, 79%, 53%);
    --surface-2: hsl(41, 79%, 43%);
    --surface-3: hsl(41, 79%, 33%);
    --surface-4: hsl(41, 79%, 23%);
    --shadow: var(--size-1) var(--size-1) 0 0 var(--text-1);
    --shadow-hover: 0px 0px 0 0 var(--text-1);
  }
</style>

<style>
  .headline {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--size-3);
    gap: var(--size-3);
  }

  img {
    border: var(--border-size-2) solid var(--stroke);
  }
</style>
