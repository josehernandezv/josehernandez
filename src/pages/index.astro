<style is:global>
  @import "open-props/colors-hsl";

  :root {
    --primary: #39675d;
    --primary-text: #c5d0b2;
    --secondary: #5e8c7b;
    --text-1: #15221b;
    --text-2: #21443e;
    --accent: #f3983c;
    --accent-text: #15221b;
    --stroke: #15221b;
    --surface: hsl(146, 21%, 60%);
    --surface-2: hsl(146, 21%, 50%);
    --surface-3: hsl(146, 21%, 40%);
    --surface-4: hsl(146, 21%, 30%);
    --shadow: var(--size-1) var(--size-1) 0 0 var(--text-1);
    --shadow-hover: 0px 0px 0 0 var(--text-1);
    /* --brand: var(--purple-5); */
  }
</style>

<style>
  @import "open-props/media";

  .hero {
    padding: var(--size-fluid-6) var(--size-fluid-2);
    max-width: var(--size-lg);
    margin-inline: auto;
  }

  h1 {
    color: var(--text-2);
    font-weight: var(--font-weight-6);
    font-size: var(--font-size-4);
    /* line-height: var(--font-lineheight-0); */
  }

  h1 strong {
    color: var(--text-1);
    font-weight: var(--font-weight-9);
    /* font-size: var(--font-size-fluid-3); */
    /* font-size: var(--font-size-8); */
    font-size: clamp(3.5rem, 10vw, 4.5rem);
  }

  .hero p {
    margin-top: var(--size-3);
    font-size: var(--font-size-3);
    font-weight: var(--font-weight-5);
    margin-block-end: var(--size-3);
  }

  .links {
    display: flex;
    gap: var(--size-4);
  }
</style>
